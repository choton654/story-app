<h4>Dashboard</h4>
<h2>Wlcome {{ name }}</h2>
<p>Here your stories</p>
{{#if stories}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td>
        <a href="/stories/{{ _id }}">{{ title }}</a>
      </td>
      <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
      <td>
        <span class="dash-status">{{ status }}</span>
      </td>
      <td>
        <a href="/stories/edit/{{ _id }}" class="btn btn-float"
          ><i class="fas fa-edit"></i
        ></a>
      </td>
      <td>
        <form action="/stories/{{ _id }}" method="POST">
          <input type="hidden" value="DELETE" name="_method" />
          <button type="submit" class="btn red">
            <i class="fas fa-trash"></i>
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>you have not created any stories</p>
{{/if}}
